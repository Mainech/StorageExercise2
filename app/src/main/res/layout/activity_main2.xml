<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.charmaine.storageexercise.Main2Activity">


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:onClick="LoadFromSharedPreferences"
        android:text="Shared Preference" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button7"
        android:layout_gravity="center_horizontal"
        android:onClick="LoadFromInternalStorage"
        android:text="Internal Storage" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="LoadFromInternalCacheStorage"
        android:text="Internal Cache" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:onClick="LoadFromExternalCacheStorage"
        android:text="External Cache" />

    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:onClick="LoadFromExternalPrivateStorage"
        android:text="External Storage" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="LoadFromExternalPublicStorage"
        android:text="External Public Storage" />

    <Button
        android:id="@+id/button12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button11"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:onClick="Back"
        android:text="Previous" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="59dp"
        android:layout_marginStart="21dp"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text"
        android:layout_below="@+id/button12"
        android:layout_marginTop="17dp"
        android:text="Display:"
        android:textSize="8pt" />
</RelativeLayout>
